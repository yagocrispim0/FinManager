@model FinManager.Models.ViewModel.ExpenseFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Add Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">          
            <div class="form-group">
                <label asp-for="Expense.Name" class="control-label"></label>
                <input asp-for="Expense.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Expense.Amount" class="control-label"></label>
                <input asp-for="Expense.Amount" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Expense.Date" class="control-label"></label>
                <input asp-for="Expense.Date" class="form-control" />
            </div>
             <div class="form-group">
                <label asp-for="Expense.DoerId" class="control-label"></label>
                <select asp-for="Expense.DoerId" asp-items="@(new SelectList(Model.Doers,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>