@model FinManager.Models.ViewModel.IncomeFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Edit Income</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">   
            <input type="hidden" asp-for="Income.Id" />
            <div class="form-group">
                <label asp-for="Income.Name" class="control-label"></label>
                <input asp-for="Income.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Income.Amount" class="control-label"></label>
                <input asp-for="Income.Amount" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Income.Date" class="control-label"></label>
                <input asp-for="Income.Date" class="form-control" />
            </div>
             <div class="form-group">
                <label asp-for="Income.DoerId" class="control-label"></label>
                <select asp-for="Income.DoerId" asp-items="@(new SelectList(Model.Doers,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>